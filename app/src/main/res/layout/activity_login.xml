<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="#15202B">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:id="@+id/logback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login"
            android:gravity="center_horizontal"
            android:textColor="#8899A6"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            android:drawableRight="@drawable/email"
            android:textColor="#8899A6"
            android:textColorHint="#8899A6"
            android:id="@+id/emaillog"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter shopname"
            android:drawableRight="@drawable/shop"
            android:textColor="#8899A6"
            android:textColorHint="#8899A6"
            android:id="@+id/shopnamelog"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#8899A6"
            android:text="done"
            android:id="@+id/donelogin"
            android:textAllCaps="false"
            android:backgroundTint="#192734"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>